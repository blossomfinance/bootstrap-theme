{{#extend "layout"}}

  {{#content "bodyClass"}}bleed{{/content}}

  {{#content "main"}}
  <article class="new-investment container-fluid">
    <div class="row">
      <div class="col-4 left">
        <aside>
          <img src="/images/chinese-street-food.jpg" />
          <header>
            <small>Microfinance</small>
            <h1>Traditional Market Sellers &amp; Micro-Businesses</h1>
            <p>Invest in traditional market traders in Indonesia's cultural heartland.</p>
          </header>
          <dl class="dl dl-list dl-icon dl-border-bottom">
            <dd>8%</dd>
            <dt>
              <i class="icon icon-growth"></i>
              Gross AROI<a class="footnote">1</a>
            </dt>
            <dd>12 Months</dd>
            <dt>
              <i class="icon icon-calendar"></i>
              Maturity / Term
            </dt>
            <dd>Microfinance</dd>
            <dt>
              <i class="icon icon-microfinance"></i>
              Category/Industry
            </dt>
            <dd>Bali, Indonesia</dd>
            <dt>
              <i class="icon icon-globe"></i>
              Project/Location
            </dt>
            <dd>Indonesia</dd>
            <dt>
              <i class="icon icon-scales-of-justice"></i>
              Governing Law
            </dt>
            <dd>Restricted</dd>
            <dt>
              <i class="icon icon-trading-bars"></i>
              Trading/Transfer
            </dt>
          </dl>
          <footer>
            <a href="/investments/bmt-bin-ummah-2-variable-profit-rate-sukuk" class="btn btn-link-arrow-left-secondary">Project Details</a>
          </footer>
        </aside>
      </div>
      <div class="col-8 d-flex justify-content-center">
        <main class="col-10 col-md-8 col-xl-6">
          <h2>New Investment</h2>
          <ol class="steps-circle">
            <li class="completed">1</li>
            <li class="active">2</li>
            <li>3</li>
          </ol>
          <h3>Select Payment Method</h3>
          <p>Decide how you will send and receive payments related to your investment.</p>
          <form class="was-validated">
            <div class="form-group-stacked valid">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="foo@bar.com" />
              <div class="invalid-feedback">Please enter a valid item</div>
            </div>
            <div class="form-group-stacked has-error">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" required minlength="10" value="123" />
              <div class="invalid-feedback">Please enter a valid item</div>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" required />
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </main>
      </div>
    </div>
  </article>
  {{/content}}
{{/extend}}
